{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true
    }
  ],
  "platformAutomerge": true,
  "requiredStatusChecks": [],
  "prCreation": "immediate",
  "prHourlyLimit": 0
}
